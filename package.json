{
  "name": "lead-crm",
  "version": "1.0.0",
  "description": "MangoLeads - CRM platform for lead collection and distribution",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node database/setup.js",
    "status": "node status.js",
    "diagnostic": "node diagnostic.js",
    "smoke-test": "node smoke-test.js",
    "redis-check": "node redis-check.js",
    "queue-validation": "node queue-validation.js",
    "test:setup": "node test-setup.js",
    "test:api": "node test-api.js",
    "test:queue": "node -e \"const queue = require('./queue'); console.log('Queue test:', queue);\"",
    "test:db": "node -e \"const db = require('./db'); db.query('SELECT NOW()').then(r => console.log('DB test:', r.rows[0])).catch(console.error);\"",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run lint:fix && npm run format",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "crm",
    "leads",
    "api",
    "mangoleads"
  ],
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "axios": "^1.11.0",
    "bcrypt": "^6.0.0",
    "bullmq": "^5.56.8",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "pg": "^8.16.3",
    "validator": "^13.15.15"
  },
  "devDependencies": {
    "eslint": "^9.32.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2"
  }
}
