{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start MangoLeads Dev Server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "Start MangoLeads v2 Server",
			"type": "shell",
			"command": "npm",
			"args": ["run", "dev"],
			"group": "build",
			"isBackground": true,
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "new"
			},
			"problemMatcher": []
		},
		{
			"label": "Install Server Dependencies",
			"type": "shell", 
			"command": "npm",
			"args": ["install"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}/server"
			},
			"presentation": {
				"echo": true,
				"reveal": "always"
			}
		}
	]
}